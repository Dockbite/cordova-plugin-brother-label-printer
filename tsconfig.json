{
    "include": [
        "./api/**/*"
    ],
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictFunctionTypes": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "stripInternal": false,
        "target": "es2015",
        "outDir": "./dist",
        "lib": [
            "es2015",
            "es2015.iterable",
            "es2015.collection",
            "es2015.promise",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "dom"
        ]
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "bazelOptions": {
        "suppressTsconfigOverrideWarnings": true
    }
}